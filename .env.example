# ============================================================
# This Mind Does Not Exist â€” Environment Configuration
# ============================================================
# Copy this file to .env and customize as needed.
# All defaults are designed to work out of the box with Ollama.
# ============================================================

# --- Ollama Configuration ---
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_TIMEOUT=120000

# --- Model Selection ---
# Proposer: The model that builds and defends answers
PROPOSER_MODEL=qwen3:32b
# Skeptic: The model that critiques and challenges
SKEPTIC_MODEL=llama3.3:70b
# Synthesizer: The model that produces the final polished answer (can be same as Proposer)
SYNTHESIZER_MODEL=qwen3:32b
# Embedding model for RAG
EMBEDDING_MODEL=nomic-embed-text

# --- Debate Configuration ---
# Number of debate rounds (3-5 recommended)
DEBATE_ROUNDS=4
# Temperature for Proposer (lower = more focused)
PROPOSER_TEMPERATURE=0.7
# Temperature for Skeptic (slightly higher = more creative criticism)
SKEPTIC_TEMPERATURE=0.8
# Temperature for Synthesizer
SYNTHESIZER_TEMPERATURE=0.5

# --- RAG Configuration ---
# Number of reasoning templates to retrieve per query
RAG_TOP_K=3
# Vector database backend: "chromadb" or "lancedb"
VECTOR_DB=chromadb
# Path to reasoning templates
TEMPLATES_DIR=./data

# --- Storage ---
# SQLite database path for traces and metadata
DATABASE_PATH=./data/traces.db
# Directory for saving debate traces
TRACES_DIR=./data/traces

# --- Fine-Tuning ---
# Enable automatic fine-tuning
FINETUNE_ENABLED=false
# Minimum traces required before first fine-tune
FINETUNE_MIN_TRACES=50
# Minimum quality score for traces used in fine-tuning (1-10)
FINETUNE_MIN_QUALITY=8
# Schedule: "nightly", "weekly", or "manual"
FINETUNE_SCHEDULE=weekly
# LoRA rank (lower = smaller adapter, higher = more capacity)
LORA_RANK=16
# LoRA alpha
LORA_ALPHA=32

# --- Web UI ---
NEXT_PUBLIC_API_URL=http://localhost:3001
WEB_PORT=3000

# --- Backend API ---
API_PORT=3001
API_HOST=0.0.0.0

# --- Logging ---
LOG_LEVEL=info
